{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src/",
    "outDir": "build/tsc/",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
  }
}